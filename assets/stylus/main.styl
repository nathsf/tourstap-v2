/*menu*/
.nav
    float left
    nav
        width 60px
        height 870px
        background-color gray
        border 1px solid white
        z-index 1100
        ul.navbar 
            padding-left 0px
            position: relative
            left -2px
            top -2px
            z-index 10000
            li 
                background-color gray
                width 60px
                height 60px
                list-style none
                border 1px solid white
                p
                    display none
                &:active
                            width 310px
                            -webkit-transition width .2s ease-in
                            -moz-transition width .2s ease-in
                            -ms-transition width .2s ease-in
                            transition width .2s ease-in
                            img
                                display none
                            p
                                display inherit
                                color #d6a610
                                float right
                                padding-top 5%
                                padding-right 5%
                                font-size 17px
                &:hover
                            width 310px
                            -webkit-transition width .2s ease-in
                            -moz-transition width .2s ease-in
                            -ms-transition width .2s ease-in
                            transition width .2s ease-in
                            img
                                display none
                            p
                                display inherit
                                color white
                                float right
                                padding-top 6%
                                padding-right 5%
                                font-size 17px
                &:nth-child(5)
                        padding 7% 16%
                &:nth-child(1)
                        padding 7% 16%
                        
                                
                &:nth-child(6)
                        margin-top 655%
                        &:hover
                            width 60px
                            img
                                display inherit
                &:nth-child(7)
                        &:hover
                            width 60px
                            img
                                display inherit
                img
                    padding 18% 21%
                    
