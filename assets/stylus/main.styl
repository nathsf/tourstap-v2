/*menu*/
.nav
    float left
    nav
        width 60px
        height 900px
        background-color #4a4b4c
        border 1px solid white
        z-index 1100
        ul.navbar 
            padding-left 0px
            position: relative
            left -2px
            top -2px
            z-index 10000
            .icon
                &:hover
                    width 60px
                    img
                       display inherit
            .icon.web
                    margin-top 500%
            li 
                background-color #4a4b4c
                width 60px
                height 60px
                list-style none
                border 1px solid white
                p
                    display none
                &:active
                            width 285px
                            -webkit-transition width .2s ease-in
                            -moz-transition width .2s ease-in
                            -ms-transition width .2s ease-in
